.parallax{
    perspective: 1px;
    background-image: url(../images/portfolioHeader.jpg);

    /* Create the parallax scrolling effect */
    background-attachment: fixed;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;

    height: 6000px;
}


