.content {
  position: absolute;
  width: 100%;
  height: 100%;
  box-shadow: 0 0 20px rgba(0,0,0,0.1);
  transition: transform 1s;
  transform-style: preserve-3d;
  z-index: 10;
}

.card:hover .content {
  transform: rotateY( 180deg ) ;
  transition: transform 0.5s;
  backface-visibility: hidden;
  z-index: 10;
}

.front,
.back {
  position: absolute;
  height: 100%;
  width: 100%;
  background: #373737;
  color: #03446A;
  text-align: center;
  border-radius: 2px;
  backface-visibility: hidden;
  z-index: 10;
}

